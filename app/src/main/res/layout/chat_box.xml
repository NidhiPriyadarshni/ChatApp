<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_margin="2dp"

    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/chat_box_receive"
            android:padding="2dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/chat_button">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="1dp"
                android:id="@+id/chat_box_receive_msg"
                android:textColor="#000000"
                android:text=""
                android:textSize="14sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="2dp"
                android:layout_marginStart="1dp"
                android:paddingStart="1dp"
                android:paddingEnd="2dp"
                android:layout_below="@id/chat_box_receive_msg"
                android:layout_alignParentStart="true"
                android:textAlignment="viewEnd"
                android:id="@+id/chat_box_receive_msg_time"
                android:textColor="#000000"
                android:text="11:20 pm"
                android:textSize="10sp"/>

        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/chat_box_send"
            android:padding="2dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:background="@drawable/buttons">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"

                android:id="@+id/chat_box_send_msg"
                android:textColor="#000000"
                android:text=""
                android:textSize="14sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="1dp"
                android:layout_marginEnd="2dp"
                android:paddingEnd="2dp"
                android:paddingStart="1dp"
                android:layout_below="@id/chat_box_send_msg"
                android:textAlignment="viewEnd"
                android:layout_alignParentStart="true"
                android:id="@+id/chat_box_send_msg_time"
                android:textColor="#000000"
                android:text="11:20 pm"
                android:textSize="10sp"/>

            </RelativeLayout>
        </RelativeLayout>



            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:id="@+id/image_box_receive"
                android:padding="2dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:background="@drawable/chat_button">

                <ImageView
                    android:layout_width="260dp"
                    android:layout_height="260dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_margin="2dp"
                    android:id="@+id/image_box_receive_msg"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="2dp"
                    android:layout_marginStart="1dp"
                    android:paddingStart="1dp"
                    android:paddingEnd="2dp"
                    android:layout_below="@id/image_box_receive_msg"
                    android:layout_alignParentStart="true"
                    android:textAlignment="viewEnd"
                    android:id="@+id/image_box_receive_msg_time"
                    android:textColor="#000000"
                    android:text="11:20 pm"
                    android:textSize="10sp"/>

            </RelativeLayout>



            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/image_box_send"
                android:padding="2dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:background="@drawable/buttons">

                <ImageView
                    android:layout_width="260dp"
                    android:layout_height="260dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_margin="2dp"
                    android:id="@+id/image_box_send_msg"
                    />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="1dp"
                    android:layout_marginEnd="2dp"
                    android:paddingEnd="2dp"
                    android:paddingStart="1dp"
                    android:layout_below="@id/image_box_send_msg"
                    android:textAlignment="viewEnd"
                    android:layout_alignParentStart="true"
                    android:id="@+id/image_box_send_msg_time"
                    android:textColor="#000000"
                    android:text="11:20 pm"
                    android:textSize="10sp"/>

            </RelativeLayout>

    <RelativeLayout
        android:layout_width="165dp"
        android:layout_height="170dp"
        android:id="@+id/doc_box_receive"
        android:padding="2dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/file_icon">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="1dp"
            android:layout_above="@id/doc_box_receive_msg_time"
            android:id="@+id/doc_box_receive_msg"
            android:textColor="#000000"
            android:text="document"
            android:textSize="13sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="2dp"
            android:layout_marginStart="1dp"
            android:paddingStart="1dp"
            android:paddingEnd="2dp"

            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:textAlignment="viewEnd"
            android:id="@+id/doc_box_receive_msg_time"
            android:textColor="#000000"
            android:text="11:20 pm"
            android:textSize="10sp"/>

    </RelativeLayout>

    <RelativeLayout
    android:layout_width="165dp"
    android:layout_height="170dp"
    android:id="@+id/doc_box_send"

    android:padding="2dp"
    android:layout_alignParentTop="true"
    android:layout_alignParentEnd="true"
    android:background="@drawable/file_icon">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"

        android:layout_above="@id/doc_box_send_msg_time"
        android:id="@+id/doc_box_send_msg"
        android:textColor="#000000"
        android:text="document"
        android:textSize="13sp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="1dp"
        android:layout_marginEnd="2dp"
        android:paddingEnd="2dp"
        android:paddingStart="1dp"

        android:textAlignment="viewEnd"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:id="@+id/doc_box_send_msg_time"
        android:textColor="#000000"
        android:text="11:20 pm"
        android:textSize="10sp"/>

</RelativeLayout>



</RelativeLayout>